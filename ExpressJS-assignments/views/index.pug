
//- pug file to obtain user data

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Pug
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    body 
        form(action="#" method="post" style="width:400px; height:300px; background-color:aqua; border-radius:5px; box-sizing:border-box; padding:20px; margin:100px auto") 
            input(type="text" class="form-control" name="heroTitle" placeholder="Enter hero's title" style="margin:5px") 
            input(type="text" class="form-control" name="heroFirstName" placeholder="Enter hero's firstname" style="margin:5px")
            input(type="text" class="form-control" name="heroLastName" placeholder="Enter hero's lastname" style="margin:5px")
            input(type="text" class="form-control" name="heroPower" placeholder="Enter hero's power" style="margin:5px")
            input(type="text" class="form-control" name="heroCity" placeholder="Enter hero's city" style="margin:5px")
            button(type="submit" class="btn btn-secondary" style="margin:5px;") Submit